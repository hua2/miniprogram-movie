/* miniprogram/pages/user/user.wxss */

.user {
  text-align: center;
  height: 400rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content:center;
  flex-direction: column;
  background: #e54847;
}

.user-avatar {
  width: 200rpx;
  height: 200rpx;
  display: block;
  border-radius: 50%;
  overflow: hidden;
}

.user-nickname {
  margin-top: 20rpx;
  color: #fff;
  font-size: 36rpx;
}
.user-info{
   margin-top: 20rpx;
   font-size: 42rpx;
   font-weight: bold;
}