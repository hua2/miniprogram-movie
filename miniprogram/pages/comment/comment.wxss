/* pages/comment/comment.wxss */
.comment-info{
  width: 100%;
  height: 610rpx;
  padding: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-size: 100% auto;
}
.comment-info:after {
  content: "";
  width: 100%;
  height: 630rpx;
  position: absolute;
  left: 0;
  top: 0;
  background: inherit;
  filter: blur(5px);
  z-index: 1;
}

.comment-img {
  z-index: 2;
  width: 400rpx;
  height: 520rpx;
  object-fit: cover;
}
.comment-title{
  z-index: 2;
  font-size: 50rpx;
  color: #fff;
  text-align: center;
}